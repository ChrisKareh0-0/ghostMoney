{
  "name": "ghost-money",
  "version": "1.0.0",
  "description": "Gaming Lounge Client Management System",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "vite build",
    "postinstall": "electron-builder install-app-deps",
    "rebuild:win": "electron-builder install-app-deps --platform win32 --arch x64",
    "build:win": "npm run build && npm run rebuild:win && electron-builder --win --x64",
    "build:electron": "electron-builder",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "gaming",
    "lounge",
    "management"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "vite": "^5.0.11"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "date-fns": "^4.1.0",
    "exceljs": "^4.4.0",
    "googleapis": "^166.0.0",
    "moment": "^2.30.1",
    "pdfkit": "^0.14.0",
    "react": "^18.2.0",
    "react-big-calendar": "^1.19.4",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1"
  },
  "build": {
    "appId": "com.ghostmoney.app",
    "productName": "GhostMoney",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "!electron/**/*.map",
      "!**/*.md"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "GhostMoney",
      "requestedExecutionLevel": "asInvoker"
    },
    "electronDownload": {
      "cache": ".electron-cache"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GhostMoney",
      "deleteAppDataOnUninstall": false
    }
  }
}
